{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": false,
  "files": {
    "includes": [
      "**",
      "!**/dist/**",
      "!**/build/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/temp/**",
      "!**/migrations/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noStaticElementInteractions": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noUselessFragments": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "recommended": true
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      }
    }
  }
}
